<Window x:Class="ProvaPing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProvaPing"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <StackPanel>
            <Label Content="Inserisci l'indirizzo da pingare"/>
            <TextBox x:Name="txtIP"/>
            <Button Content="Pinga" Click="Button_Click"/>
            <Label Content="tempo di risposta in ms: "/>
            <TextBox x:Name="txtMs"/>
            <Label Content="Lo status attuale è: "/>
            <TextBox x:Name="txtStatus"/>
        </StackPanel>
        
    </Grid>
</Window>
